#!/usr/bin/env php
<?php

$file = '~/.grr_matches';
$cmd = "eval dir='" . $file . "'; echo \$dir";
$file = trim(`$cmd`);

$matches = json_decode(file_get_contents($file));
$key = @$_SERVER['argv'][1];

if (empty($key) or empty($matches->$key)) {
	die('Could not find key [' . $key . ']');
}

$match = $matches->$key;
$dir = $matches->cwd;

`subl $dir$match[0]:$match[1]`;
